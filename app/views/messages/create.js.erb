<% if (@message.valid? && !@message.rejected?) %>
  $('#status-box').removeClass
  $('#status-box').addClass('alert alert-success')
  $('#status-message').text('Message delivered to Twilio')
<% else %>
  $('#status-box').removeClass
  $('#status-box').addClass('alert alert-failure')
  $('#status-message').text('<%= pluralize(@message.errors.count, "error") %> occurred; please check your input and try again.')
  $('#status-message').text('<%= @message.errors.full_messages.first %>')
  <% if @message.errors.messages[:name] %> $('#name-header').addClass('field_with_errors') <% end %>
  <% if @message.errors.messages[:number] %> $('#number-header').addClass('field_with_errors') <% end %>
  <% if @message.errors.messages[:content] %> $('#content-header').addClass('field_with_errors') <% end %>
<% end %>
$('#status-box').fadeIn()
