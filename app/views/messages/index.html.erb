<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>From</th>
      <th>Number</th>
      <th>Content</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.from %></td>
        <td><%= message.number %></td>
        <td><%= message.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
